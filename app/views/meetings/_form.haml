= simple_form_for @meeting do |f|
  - if @meeting.errors.any?
    #error_explanation
      - @meeting.errors.full_messages.each do |msg|
        .alert.alert-danger.alert-dismissible{:role => 'alert'}
          %button.close{'aria-label' => 'Close', 'data-dismiss' => 'alert', :type => 'button'}
            %span{'aria-hidden' => 'true'} Ã—
          %b Error:
          = msg
  .row
    %h5 Meeting
    .field
      = f.label :title
      = f.text_field :title, class: 'form-control', autofocus: true
    .field
      = f.label :description
      = f.text_area :description, class: 'form-control'
    .field
      = f.label :"Date & Time"
      = f.datetime_select :datetime, class: 'form-control'
    .field
      = f.label :team
      = f.collection_select :team_id, Team.all, :id, :name, class: 'form-control'


  %hr
  = f.submit 'Save', class: 'btn btn-sm btn-primary btn-block'
