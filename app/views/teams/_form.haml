= simple_form_for @team do |f|
  .card-block
    - if @team.errors.any?
      #error_explanation
        - @team.errors.full_messages.each do |msg|
          .alert.alert-danger.alert-dismissible{:role => 'alert'}
            %button.close{'aria-label' => 'Close', 'data-dismiss' => 'alert', :type => 'button'}
              %span{'aria-hidden' => 'true'} Ã—
            %b Error:
            = msg
    .row
      .col-sm-6
        %h5
          %span.mdi.mdi-account-multiple
          Team
        .field
          = f.label :team_name
          = f.text_field :team_name, class: 'form-control', autofocus: true
        .field
          = f.label :description
          = f.text_area :description, class: 'form-control'
        .field
          = f.label :color
          = f.text_area :color, class: 'form-control'
        %hr
        %h5
          %span.mdi.mdi-directions
          Address
        .field
          = f.label :street_address_1
          = f.text_field :street_address_1, class: 'form-control'
        .field
          = f.label :street_address_2
          = f.text_field :street_address_2, class: 'form-control'
        .field
          = f.label :postal
          = f.text_field :postal, class: 'form-control'
        .field
          = f.label :city
          = f.text_field :city, class: 'form-control'
        .field
          = f.label :country
          = f.text_field :country, class: 'form-control'
      .col-sm-6
        %h5
          %span.mdi.mdi-account
          = t('shared.navbar.users')
        -# %select.chosen-select
        -#   %option{:selected => "selected"} Add new user
        -#   - User.order(:email).each do |user|
        -#     %option{:value => user.email}
        -#       = label_tag dom_id(user), user.email.split('@').first
        = hidden_field_tag "team[user_ids][]", nil
        %ul.list-unstyled
          - User.order(:email).each do |user|
            %li
              = check_box_tag "team[user_ids][]", user.id, @team.user_ids.include?(user.id), id: dom_id(user)
              - if user.first_name
                = user.first_name
                = user.last_name
              - else
                = user.email

  .card-footer
    .row
      .col-sm-12
        = f.submit 'Save', class: 'btn btn-primary btn-block'
