= simple_form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      - @team.errors.full_messages.each do |msg|
        .alert.alert-danger.alert-dismissible{:role => 'alert'}
          %button.close{'aria-label' => 'Close', 'data-dismiss' => 'alert', :type => 'button'}
            %span{'aria-hidden' => 'true'} Ã—
          %b Error:
          = msg
  .row
    .col-sm-6
      %h5 Team
      .field
        = f.label :name
        = f.text_field :name, class: 'form-control', autofocus: true
      .field
        = f.label :description
        = f.text_area :description, class: 'form-control'
      .field
        = f.label :color
        = f.text_area :color, class: 'form-control'
    .col-sm-6
      %h5
        %span.mdi.mdi-account
        = t('shared.navbar.users')
      -# %select.chosen-select
      -#   %option{:selected => "selected"} Add new user
      -#   - User.order(:email).each do |user|
      -#     %option{:value => user.email}
      -#       = label_tag dom_id(user), user.email.split('@').first
      = hidden_field_tag "team[user_ids][]", nil
      %ul.list-unstyled
        - User.order(:email).each do |user|
          %li
            = check_box_tag "team[user_ids][]", user.id, @team.user_ids.include?(user.id), id: dom_id(user)
            - if user.first_name
              = user.first_name
              = user.last_name
            - else
              = user.email
  %hr
  = f.submit 'Save', class: 'btn btn-sm btn-primary btn-block'
