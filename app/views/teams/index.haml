.container
  .row
    .col-lg-8.offset-lg-2.col-md-10.offset-md-1
      .card
        .card-header.clearfix
          .pull-sm-left
            %ol.breadcrumb
              %li.breadcrumb-item.active
                %i.mdi.mdi-account-multiple
                = t('shared.navbar.teams')
          .pull-sm-right
            = link_to content_tag(:i, '', class:'mdi mdi-account-multiple-plus') + ' New', new_team_path, class: 'btn btn-primary'

        .card-block
          %table.table
            %thead
              %tr
                %th
                  Name
                %th
                  Description
            %tbody
              - @teams.each do |team|
                %tr{id: dom_id(team)}
                  %td
                    %b= link_to team.name, team_path(team), style: "color:##{team.color}"
                  %td
                    = team.description
