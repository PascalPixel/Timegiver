.clearfix
  .pull-sm-left
    %ol.breadcrumb
      %li.breadcrumb-item.active
        %i.mdi.mdi-account-multiple
        = t('shared.navbar.teams')
  .pull-sm-right
    = link_to content_tag(:i, '', class:'mdi mdi-account-multiple-plus') + ' New', new_team_path, class: 'btn btn-primary'
%hr
.row
  - @teams.each do |team|
    .col-sm-4
      .card{id: dom_id(team)}
        %h4.card-header= link_to team.name, team_path(team), style: "color:##{team.color}"
        .card-block
          %p= team.description
