.container
  .row
    .col-lg-8.offset-lg-2.col-md-10.offset-md-1
      .card
        .card-header.clearfix
          .pull-left
            %ol.breadcrumb
              %li.breadcrumb-item
                = link_to teams_path do
                  %span.fa.fa-users
                  Teams
              %li.breadcrumb-item= link_to @team.team_name, team_path(@team), style: "color:##{@team.color}"
              %li.breadcrumb-item.active Edit
          .pull-right
            = link_to 'Add User', users_path, class: 'btn btn-secondary'
            = link_to 'Cancel', team_path(@team), class: 'btn btn-secondary'

        = render 'form'
