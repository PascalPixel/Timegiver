              %button.dropdown-item{:type => "button"}
                = link_to t('language', locale: lan), current_path_new_locale(lan.to_sym)

      - if user_signed_in?
        %li.nav-item.pull-xs-none.pull-md-left
          = link_to content_tag(:i, 'people', class: 'material-icons') + ' Teams', teams_path, class: 'nav-link'

        %li.nav-item.pull-xs-none.pull-md-left
          = link_to content_tag(:i, 'person', class: 'material-icons') + ' Users', users_path, class: 'nav-link'

        %li.nav-item.pull-xs-none.pull-md-left
          = link_to content_tag(:i, 'exit_to_app', class: 'material-icons') + ' Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link'

      - else
        %li.nav-item.pull-xs-none.pull-md-left
          = link_to content_tag(:i, 'input', class: 'material-icons') + ' Login', new_user_session_path, class: 'nav-link'
        %li.nav-item.pull-xs-none.pull-md-left
          = link_to content_tag(:i, 'edit', class: 'material-icons') + ' Register', new_user_registration_path, class: 'nav-link'
