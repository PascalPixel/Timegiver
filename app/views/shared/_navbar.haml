%nav.navbar.navbar-fixed-top
  %button.navbar-toggler.hidden-md-up.pull-xs-right{'data-target' => '#collapsenav', 'data-toggle' => 'collapse', :type => 'button'}
    â˜°
  = link_to root_url, class: 'navbar-brand' do
    %i.material-icons timelapse
    = t('.name')
  #collapsenav.collapse.navbar-toggleable-sm.pull-xs-left.pull-md-none
    %ul.nav.navbar-nav.pull-md-right
      -# Language selector
      %li.nav-item.pull-xs-none.pull-md-left
        .dropdown
          %button.btn.btn-secondary#languageDropdown.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
