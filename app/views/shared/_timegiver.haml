#timegiver.card-block
  - @team.users.each do |user|
    - time = Time.current.in_time_zone(user.time_zone)
    - script_time = time.hour
    - readable_time = time.strftime("%H:%M")
    .row{class: current_user == user ? 'current_user' : nil }
      .col-xs-3
        = link_to user do
          = user.first_name
          = user.last_name
          - if user.admin?(@team)
            %i.mdi.mdi-star
        %span.tag.tag-primary= time.strftime('%Z')
      .col-xs-9
        .timebar
          .line.bar
            - (0..23).each do |hour|
              - hour = hour + script_time

              - if hour > 23
                - hour = hour - 24

              - if script_time == hour
                .hour.active-time><= hour
              - elsif (9..17).include?(hour)
                .hour.work-time><= hour
              - elsif (7..22).include?(hour)
                .hour.awake-time><= hour
              - else
                .hour><= hour
