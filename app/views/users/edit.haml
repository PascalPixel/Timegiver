.container
  .row
    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
      .card
        .card-header.clearfix
          .pull-left
            %ol.breadcrumb
              %li
                = link_to teams_path do
                  %span.fa.fa-users
                  Teams
              %li
                = link_to users_path(team_id: @team) do
                  %span.fa.fa-group
                  Users
              %li
                = link_to user_path(@user) do
                  %span.fa.fa-user
                  = @user.id
              %li.active Edit
          .pull-right
            = link_to 'Cancel', users_path(team_id: @team), class: 'btn btn-secondary-outline'

        = render partial: "form"
