.container
  .row
    .col-lg-8.offset-lg-2.col-md-10.offset-md-1
      .card
        .card-header.clearfix
          .pull-sm-left
            %ol.breadcrumb
              %li.breadcrumb-item.active
                = @user.first_name
                = @user.last_name
          .pull-sm-right

        .card-block
          %dl
            %dt First name
            %dd= @user.first_name
            %dt Last name
            %dd= @user.last_name
            %dt Email
            %dd= @user.email
