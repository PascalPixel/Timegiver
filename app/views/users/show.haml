.clearfix
  .pull-sm-left
    %ol.breadcrumb
      %li.breadcrumb-item
        = link_to users_path(team_id: @team) do
          %i.mdi.mdi-account
          = t('shared.navbar.users')
      %li.breadcrumb-item.active
        = @user.first_name
        = @user.last_name
  .pull-sm-right
    - if current_user == @user
      = link_to 'Edit', edit_user_path(@user), class: 'btn btn-secondary'
      = link_to 'Delete', user_path(@user), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'
%hr
.row
  .col-sm-6
    %dl
      %dt First name
      %dd= @user.first_name
      %dt Last name
      %dd= @user.last_name
  .col-sm-6
    %dl
      %dt Timezone
      %dd
        %span.tag.tag-primary= Time.current.in_time_zone(@user.time_zone).strftime("%H:%M")
        = @user.time_zone
      %dt Email
      %dd= @user.email
